{
  "language": "ts",
  "entryFile": "main",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "plugins": [{
      "name": "@nestjs/swagger",
      "options": {
        "introspectComments": true
      }
    }],
    "builder": {
      "type": "webpack",
      "options": {
        "configPath": "webpack.config.js"
      }
    }
  }
}
